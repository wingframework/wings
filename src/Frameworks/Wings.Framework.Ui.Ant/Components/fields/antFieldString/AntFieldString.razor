@namespace Wings.Framework.Ui.Ant.Components
@attribute [ComponentDataType("System.String")]
@typeparam TModel
@inherits AntFieldStringBase<TModel>
<Row Gutter="16">
    <AntDesign.Col Class="gutter-row" Span="6">
        @FieldLabel
    </AntDesign.Col>
    <AntDesign.Col Class="gutter-row" Span="12">

        @if (AllowEdit)
        {
        <AntDesign.Input TValue="string" Value="@((string)Property.GetValue(Value))" ValueChanged="async (e) => await changeValue(e)">
        </AntDesign.Input>
                    }
                    else
                    {
                        @Property.GetValue(Value).ToString()
                    }

    </AntDesign.Col>

</Row>